        <button class="shop__button" id="{{this._id}}">Agregar al carrito</button>
        <a href="http://localhost:8080/shop/{{this._id}}"><button>ver m√°s</button></a>
    </article>
    <br/>
    {{/each}}
</div>
<br/>
<div class="shop__pagination">
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}>Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente</a>
